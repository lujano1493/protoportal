<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>  
            {% if title is defined  %}
                 {{ title }} 
            {% else %}
                    Portal NIM
            {% endif  %}

        </title>
        {% block stylesheets %}{% endblock %}

        {% stylesheets  filter="scssphp"  output="css/app.css"
               "scss/base.scss"
               "css/Time/time.css"
               "css/Style.css"
        %}  

            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% block css %}

        {% endblock %}

            <!-- ustom fonts for this template -->
    {# <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,400,400i,700,700i,900,900i" rel="stylesheet"> #}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>  


       
        {% block menu  %}

            {% include "nim/element/menu.nim.html.twig" %}

        {% endblock %}


        <div class="alert-group">
             {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert  alert-{{ label }}" role="alert">
                    {{ message }}

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        </div>
       



         {% block content %}
            
        {% endblock %}

       
       {% javascripts filter="?jsqueeze" output="js/app.js"
        "assets/jquery/dist/jquery.js"
        "js/Highcharts-6.0.4/code/highcharts.js"
        "js/Highcharts-6.0.4/code/highcharts-more.js"
        "assets/bootstrap/dist/js//bootstrap.js"

        %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}



         {% block javascript %}
            
        {% endblock %}


    </body>
</html>
